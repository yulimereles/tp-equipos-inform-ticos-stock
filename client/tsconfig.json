{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "jsx": "react", // o "react-jsx" para React 17 y superior
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"]
}
